<% if  user_signed_in? %>
	<% if @admin %>
		<!-- サインインしている && 所属しているいずれかのグループで管理者-->
		<%= render 'partial/view_for_admin' %>
		<%= render 'partial/adminnavbar' %>
	<% else %>
		<!-- サインインしている && 所属しているいずれかのグループで管理者出ない-->
		<br><br>
		<%= render 'partial/navbar' %>
		<%= render 'partial/view_for_signed' %>
		<%#= render 'partial/footer' %>
	<% end %>
<% else %>
	<!-- サインインしていない　-->
	<%= render 'partial/view_for_unsigned' %>

<% end %>
<%= render 'partial/footer' %>



