<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="text-center">
						<span style="font-size:24px;">チームに招待</span>
					</div>
				</div>
				<div class="panel-body">
					<!-- ここからフォーム -->
					<%= form_for @team_user do |f| %>
						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
									<%= hidden_field_tag :team_id, @team_id %>
						        	<%= f.text_field :remark, :class => 'form-control',:placeholder => "招待したいユーザーのメールアドレスまたはユーザー名を入力", autofocus: true ,required: 'true' %>
								</div>
							</div>
						</div>
						<div class="actions">
							<%= f.submit "Save", class: "btn btn-danger" %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>


