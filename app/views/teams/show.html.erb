<div class="container team-show-container">
		<h1 style="font-size: 32px;"><span style="font-size: 16px;">チーム名：</span><%= @team.name %></h1>
		<div class="team-show-container-border">
			
		</div>
	<div class="row">
		<div class="team-show-container-img">
		<%= attachment_image_tag @team, :image, :fill, 300, 300, format: 'jpeg' %>
			
		</div>
	</div>
</div>

<div class="container team-show-container">
	<div class="row">
	    <div class="col-md-4 order-md-2 mb-4">
	      <h4 class="d-flex justify-content-between align-items-center mb-3">
	        <span class="text-muted">チーム詳細</span>
	      </h4>
	      <ul class="list-group mb-3">
	        <li class="list-group-item d-flex justify-content-between lh-condensed">
	          <div>
	            <h6 class="my-0">活動地域：</h6>
	          </div>
	          <span class="text-muted"><%= @team.active_place %></span>
	        </li>
	        <li class="list-group-item d-flex justify-content-between lh-condensed">
	          <div>
	            <h6 class="my-0">レベル：</h6>
	          </div>
	          <span class="text-muted"><%= @team.level %></span>
	        </li>
	        <li class="list-group-item d-flex justify-content-between lh-condensed">
	          <div>
	            <h6 class="my-0">紹介文：</h6>
	          </div>
	          <span class="text-muted"><%= @team.description %></span>
	          </div>
	        </li>
	      </ul>
	    </div>
	 	 <button class="btn btn-info" style="width: 200px;">編集</button>
	</div>
</div>

<div class="container team-show-container">
	<div class="row">
	    <div class="col-md-4 order-md-2 mb-4">
	      <h4 class="d-flex justify-content-between align-items-center mb-3">
	        <span class="text-muted">所属メンバー</span>
	      </h4>


		<div class="table-responsive">
		    <table class="table table-striped table-sm">
		      <thead>
		        <tr>
		          <th>#</th>
		          <th>氏名</th>
		          <th>管理者</th>
		          <th>ステータス</th>
		        </tr>
		      </thead>
		      <tbody>
		        <tr>
					<% @team_menber.each do |menber| %>
			          <td><%= menber.user.first_name %> <%= menber.user.last_name %></td>
			          <td></td>
			          <td>dolor</td>
			          <td><%= menber.status %></td>
					<% end %>
		        </tr>
		      </tbody>
		    </table>
		  </div>
	      <hr>
		　<div class="col-md-8 order-md-1" style="text-align: center;">

		<%= link_to invite_to_team_path(team_id: @team.id) do %>
		 	 <button class="btn btn-info" style="width: 200px;">招待</button>
		 <% end %>



<!-- 		    <form class="needs-validation" novalidate>
		        <div class="row">
		          <div class="col-md-6 mb-3">
		            <input type="text" class="form-control" id="firstName" placeholder="" value="" required>
		            <div class="invalid-feedback"></div>
		          </div>
		        </div>
		    </form> -->



		　</div>
	    </div>
	</div>
</div>


<%= render 'partial/footer' %>

<style type="text/css" media="screen">
	body{
		background-color: #ECEFF1;
	}

	.team-show-container{
		background-color: white;
		margin: 5px 10px;
		padding: 20px;
		border-radius: 1%;
		text-align: center;
	}

	.team-show-container-img{
		margin: 0 auto;
	}

	.team-show-container-border{
		margin: 0 auto 30px;
		width: 80%;
		border-bottom: 1px solid black;
	}
</style>

