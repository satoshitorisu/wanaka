<br>
<div class="app-menu">
	<h2>チーム管理</h2>
</div>

<br>


<% @teams_info.each do |team| %>
<div class="app-team-manage">
	<div class="app-team-top">
		<div class="app-team-top-image">
			<div class="app-team-top-image-item"></div>
		</div>

		<div class="app-team-top-name">
			<br>
			<ul>
				<li>チーム名：Eagles</li>
				<li>所属人数：100人</li>
			</ul>
		</div>
	</div>
	<hr>

	<%= attachment_image_tag team, :image, :fill, 100, 100, format: 'jpeg' %>



	<div class="app-team-command">
		<div class="app-team-comman-nav">
			<%= link_to(new_schedule_path) do %>
			    <div class="app-team-comman-nav-item"><button class="btn btn-danger app-team-btn">予定作成</button></div>
			<% end %>

			<%= link_to(invite_to_team_path) do %>
			    <div class="app-team-comman-nav-item"><button class="btn btn-success app-team-btn">メンバー招待</button></div>
			<% end %>
			<%= link_to(team_manage_path(team[0])) do %>
			    <div class="app-team-comman-nav-item"><button class="btn btn-secondary app-team-btn">メンバー管理</button></div>
			<% end %>
		</div>
	</div>
	<hr>
	<%= link_to(team_path(team[0])) do %>
		<div class="app-team-show">
			チームの詳細を表示する
			<div class="app-team-show-icon">
				<i class="fas fa-angle-right"></i>
			</div>
		</div>
	<% end %>
</div>
<br>
<% end %>
<div class="team-add">
	<div class="team-add-icon">
		+ <span style="font-size: 11px;">別のチームを作成する</span>
	</div>
	<div class="team-add-text">
	</div>
</div>

<br>
<br>
<br>

